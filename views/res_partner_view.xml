<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_partner_inherited_form" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="fullfy_partner_id" placeholder="ID"/>
                    <h3>
                        <field name="frist_name" placeholder="Frist Name" required="1"/>-
                        <field name="middle_name" placeholder="Midle Name"/>-
                        <field name="last_name" placeholder="Last Name" required="1"/>
                    </h3>
                </field>
                <field name="name" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="country_id" position="after">
                    <field name="area" placeholder="Area"/>
                    <field name="group" placeholder="Group"/>
                    <field name="building" placeholder="Building"/>
                    <field name="flat" placeholder="Flat"/>
                </field>
                <page name="sales_purchases" position="after">
                    <page string="Addresses">
                        <field name="address_ids">
                            <tree colors="black:is_main == True">
                                <field name="name"/>
                                <field name="type"/>
                                <field name="active"/>
                                <field name="zip"/>
                                <field name="street"/>
                                <field name="street2"/>
                                <field name="area"/>
                                <field name="group"/>
                                <field name="building"/>
                                <field name="flat"/>
                                <field name="country_id" options="{'no_create': True}"/>
                                <field name="state_id" domain="[('country_id','=',country_id)]"
                                       options="{'no_create': True}"/>
                                <field name="city_id" domain="[('state_id','=',state_id)]"
                                       options="{'no_create': True}"/>
                                <field name="is_main"/>
                            </tree>
                            <form>
                                <group>
                                    <group>
                                        <field name="name" colspan="4"/>
                                        <label for="street"/>
                                        <div class="o_address_format">
                                            <field name="street" placeholder="Street..." class="o_address_street"/>
                                            <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                            <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                            <field name="country_id" placeholder="Country" class="o_address_country"
                                                   options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                            <field name="state_id" class="o_address_state" placeholder="State"
                                                   options="{'no_create': True}"
                                                   domain="[('country_id','=',country_id)]"
                                                   context="{'country_id': country_id, 'zip': zip}"/>
                                            <field name="city_id" domain="[('state_id','=',state_id)]"
                                                   placeholder="City" options="{'no_create': True}"
                                                   class="o_address_city"/>
                                        </div>
                                        <field name="phone" widget="phone"/>
                                        <field name="mobile" widget="phone"/>
                                        <field name="email" widget="email" context="{'gravatar_image': True}"/>
                                        <field name="website" widget="url" placeholder="e.g. www.odoo.com"/>
                                        <field name="is_main"/>
                                    </group>
                                    <group>
                                        <field name="area" placeholder="Area"/>
                                        <field name="group" placeholder="Group"/>
                                        <field name="building" placeholder="Building"/>
                                        <field name="flat" placeholder="Flat"/>
                                        <field name="type"/>
                                        <field name="active"/>
                                    </group>
                                </group>
                            </form>
                        </field>
                    </page>
                </page>
            </field>
        </record>

        <!--Address -->
        <record id="res_partner_address_form" model="ir.ui.view">
            <field name="name">Partner Address</field>
            <field name="model">partner.address</field>
            <field name="arch" type="xml">
                <form string="Partner Address">
                    <sheet>
                        <h1>
                            <field name="name" colspan="4"/>
                        </h1>
                        <group>
                            <group>
                                <label for="partner_id" string="Partner"/>
                                <h2>
                                    <field name="partner_id" required="1"
                                           options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                </h2>
                            </group>
                            <group>
                            </group>
                        </group>
                        <group>
                            <group>
                                <label for="street"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country"
                                           options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                    <field name="state_id" class="o_address_state" placeholder="State"
                                           options="{&quot;no_open&quot;: True}"
                                           domain="[('country_id','=',country_id)]"
                                           context="{'country_id': country_id, 'zip': zip}"/>
                                    <field name="city_id" domain="[('state_id','=',state_id)]" placeholder="City"
                                           class="o_address_city"/>
                                </div>
                                <field name="phone" widget="phone"/>
                                <field name="mobile" widget="phone"/>
                                <field name="email" widget="email" context="{'gravatar_image': True}"/>
                                <field name="website" widget="url" placeholder="e.g. www.odoo.com"/>
                                <field name="is_main"/>
                            </group>
                            <group>
                                <field name="area" placeholder="Area"/>
                                <field name="group" placeholder="Group"/>
                                <field name="building" placeholder="Building"/>
                                <field name="flat" placeholder="Flat"/>
                                <field name="type"/>
                                <field name="active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="res_partner_address_tree" model="ir.ui.view">
            <field name="name">Partner Address</field>
            <field name="model">partner.address</field>
            <field name="arch" type="xml">
                <tree string="Partner Address">
                    <field name="partner_id" />
                    <field name="name"/>
                    <field name="type"/>
                    <field name="active"/>
                    <field name="zip"/>
                    <field name="street"/>
                    <field name="street2"/>
                    <field name="area"/>
                    <field name="group"/>
                    <field name="building"/>
                    <field name="flat"/>
                    <field name="country_id" options="{'no_create': True}"/>
                    <field name="state_id" domain="[('country_id','=',country_id)]"
                           options="{'no_create': True}"/>
                    <field name="city_id" domain="[('state_id','=',state_id)]" options="{'no_create': True}"/>
                    <field name="is_main"/>
                </tree>
            </field>
        </record>
        <record id="res_partner_address_search" model="ir.ui.view">
            <field name="name">Partner Address</field>
            <field name="model">partner.address</field>
            <field name="arch" type="xml">
                <search string="Partner Address">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="active"/>
                    <field name="zip"/>
                    <field name="street"/>
                    <field name="street2"/>
                    <field name="area"/>
                    <field name="group"/>
                    <field name="building"/>
                    <field name="flat"/>
                    <field name="country_id" options="{'no_create': True}"/>
                    <field name="state_id" domain="[('country_id','=',country_id)]"
                           options="{'no_create': True}"/>
                    <field name="city_id" domain="[('state_id','=',state_id)]" options="{'no_create': True}"/>
                    <field name="is_main"/>
                </search>
            </field>
        </record>

        <act_window id="res_partner_address_action"
                    name="Partner Address"
                    res_model="partner.address"
                    view_mode="tree,form"
                    view_id="res_partner_address_tree"/>

        <menuitem id="res_partner_address_menu" name="Partner Address"
                  action="res_partner_address_action"
                  parent="contacts.menu_localisation" sequence="4"/>
    </data>
</odoo>